<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyActivity"
    android:gravity="center_horizontal"
    android:layout_weight="1"
    android:padding="@dimen/gridview_padding">
    <GridView
        android:id="@+id/gridView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:verticalSpacing="@dimen/listitem_spacing"
        android:horizontalSpacing="@dimen/listitem_spacing"
        android:gravity="center"
        android:numColumns="auto_fit"
        android:stretchMode="columnWidth"
        android:layout_weight="1"
        android:includeFontPadding="false"
        android:listSelector="@null"
        ><!-- TB Note: listSelector="@null" To fix default layout padding issue in API 10 devices -->
    </GridView>
</RelativeLayout>
